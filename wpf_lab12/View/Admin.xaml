<UserControl x:Class="wpf_lab12.View.Admin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:wpf_lab12.View" xmlns:vm="clr-namespace:wpf_lab12.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1080"
             Style="{StaticResource Page_Style}">
    <UserControl.DataContext>
        <vm:AdminVM />
    </UserControl.DataContext>
    <Border Background="Gray" 
                CornerRadius="0, 20, 20, 0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="300"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <Border Background="White" VerticalAlignment="Top" HorizontalAlignment="Center" CornerRadius="0,0,20,20">
                    <TextBlock Text="Administrator" FontFamily="/Fonts/#Rubik" Style ="{StaticResource MaterialDesignHeadline3TextBlock}"/>
                </Border>
            </StackPanel>
        </Grid>

    </Border>
</UserControl>
